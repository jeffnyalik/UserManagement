@model UserManagement.Models.ViewModels.CreateRoleViewModel

<div class="row mt-5" style="display:flex; align-items:center; justify-content:center;">
    <div class="col-md-3">
        <form method="post">
            <div class="form-group">
                <h4 class="text-info">Add Role</h4>
                <span asp-validation-summary="All" class="text-danger"></span>
                <input type="text" asp-for="RoleName" class="form-control" placeholder="Roles Name"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block rounded-0 btn-sm">Create Role</button>
            </div>
        </form>
    </div>
</div>