@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "List Roles";
}

<section style="" class="role-class">
    <a  asp-action="createrole" asp-controller="admin" class="float-right btn btn-sm btn-primary mb-2 rounded-0 text-center text-white">Create Role</a>
    @if(Model.Any())
    {  
       <table class="table table-striped" width="100%">
            <thead>
                <tr>
                    <th scope="col">Role Id</th>
                    <th scope="col">Role Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <th scope="row">@role.Id</th>
                        <td>@role.Name</td>
                        
                        <td>
                            <a class="btn btn-info btn-sm text-white rounded-0">Edit</a> | <a class="btn btn-danger btn-sm rounded-0 text-white">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
       </table>
      
    } 
    else
    {
        <p>No roles for now...</p>
    }
</section>