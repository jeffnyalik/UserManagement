@model UserManagement.Models.ViewModels.ForgotPasswordViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot password</title>
</head>
<body>
    <h3 class="text-info">Forgot your Password</h3>
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control" placeholder="Enter Email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <button type="submit" class="btn btn-success rounded-0">Submit</button>
            </div>
            
        </div>
    </form>
</body>
</html>
